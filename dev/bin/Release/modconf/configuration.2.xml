   rangeSlowWheelingSpeed = "0.004"
   rangeFastWheelingMaxSpeed = "0.3"
   engineCounterThreshold="1500"
   engineCounterThresholdInAir="500"
   breakingMinSpeed = "5"
   sinkingSpeed = "1.3"
   maxHeight = "150"
   landingSpeed = "2.0"
   userRotateStep = "2.2943951"
   userRotateBrakingFactor = "3.9"
   userMaxRotateValue = "2.0943951"
   godMode = "0"
   width = "5.5"
   height = "2.1"
   canSpin = "1"
   turningDuration = "3.0"
    
    />

  <B25
   oilLoss="0.2"
   moveStep="4"
   maxSpeed="50"   
   petrolLoss="1"
   bombCount="30"
   rocketCount="20"
   torpedoCount="1"
   breakingPower = "4"
   hitCoefficient="0.38"
   rangeSlowWheelingSpeed = "0.004"
   rangeFastWheelingMaxSpeed = "0.3"
   engineCounterThreshold="1500"
   engineCounterThresholdInAir="500"
   breakingMinSpeed = "5"
   sinkingSpeed = "1.3"
   maxHeight = "150"
   landingSpeed = "2.0"
   userRotateStep = "0.6943951"
   userRotateBrakingFactor = "4.5"
