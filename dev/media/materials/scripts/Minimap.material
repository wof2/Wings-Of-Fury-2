material Minimap/Ocean
{	
    technique
    {	
        pass
        {
			lighting off
			texture_unit
			{
				texture mini_ocean.png
				scale 0.001 1.0
				wave_xform scroll_x inverse_sawtooth 1.0 0.2 0.0 5.0
			//	colour_op_ex source1 src_manual src_current 0 0.51 1.0
			}
			   
		}
    }
}

