material SplashScreen
{
	technique
	{
		pass
		{			
			depth_write off
			//scene_blend alpha_blend 
			// wartosc podmieniana dynamicznie
			texture_unit 
			{
				filtering anisotropic
				max_anisotropy 4
				texture Loading1.jpg			
			}
		}
	}
}

