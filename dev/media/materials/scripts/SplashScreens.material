material AdMaterial
{
	technique
	{
		pass 0
		{
			ambient 1.0 1.0 1.0
			diffuse 1.0 1.0 1.0
			lighting off
			
			
			texture_unit 0
			{
				filtering anisotropic
				max_anisotropy 4
				texture Intro1.jpg
			}	
			
			
						
			
		}   
		
		pass 1
		{
			scene_blend alpha_blend 
			texture_unit 0
			{				
				filtering anisotropic
				max_anisotropy 4
				texture noise.png
			}		
		}
		

	}
}


